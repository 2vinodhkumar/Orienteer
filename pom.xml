				              <goal>run</goal>
				            </goals>
				          </execution>
				        </executions>
				      </plugin> -->
				</plugins>
			</build>
		</profile>
	</profiles>

	<repositories>
		<repository>
			<id>Apache Nexus</id>
			<url>https://repository.apache.org/content/repositories/snapshots/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
	</project>
